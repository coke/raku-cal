#! /usr/bin/env raku

use App::Cal;

multi sub MAIN {
    say render-month();
}

multi sub MAIN($month, $year) {
    if $month ~~ Int {
        say render-month(:$year, :$month);
    } else {
        say render-month(:$year, :month(::Months::($month.tc)));
    }
}

multi sub MAIN($single) {
    if $single ~~ Int {
        say render-month(:month($single)) if $single <=12;
        say render-year( :year($single))  if $single >12;
    } else {
        say render-month(:month(::App::Cal::Months::($single.tclc)));
    }
}

